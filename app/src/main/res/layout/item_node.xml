<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="node"
                type="com.airy.v2plus.bean.official.Node" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

        <ImageView
                android:id="@+id/node_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:src="@mipmap/ic_launcher_round"/>

        <TextView
                android:id="@+id/node_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{node.title}"
                app:layout_constraintTop_toBottomOf="@id/node_image"
                app:layout_constraintStart_toStartOf="@id/node_image"
                app:layout_constraintEnd_toEndOf="@id/node_image"
                tools:text="node"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>