<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="balance"
                type="com.airy.v2plus.bean.custom.Balance" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="250dp"
            android:paddingTop="40dp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:src="@color/white"
                app:civ_border_overlay="true"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Click the circle to Login"
                app:layout_constraintTop_toBottomOf="@id/avatar"
                app:layout_constraintStart_toStartOf="@id/avatar"/>

        <TextView
                android:id="@+id/balance_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/user_name"
                app:layout_constraintStart_toStartOf="@id/avatar"/>

        <LinearLayout
                android:id="@+id/balance_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@id/balance_label"
                app:layout_constraintTop_toTopOf="@id/balance_label"
                app:layout_constraintBottom_toBottomOf="@id/balance_label">

            <TextView
                    android:id="@+id/gold_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{balance.gold}"
                    tools:text="99"/>

            <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/gold2x"/>

            <TextView
                    android:id="@+id/silver_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{balance.silver}"
                    tools:text="99"/>

            <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/silver2x"/>

            <TextView
                    android:id="@+id/bronze_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{balance.bronze}"
                    tools:text="99"/>

            <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/bronze2x"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/redeem"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Redeem"
                app:layout_constraintTop_toTopOf="@id/balance_layout"
                app:layout_constraintBottom_toBottomOf="@id/balance_layout"
                app:layout_constraintStart_toEndOf="@id/balance_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>