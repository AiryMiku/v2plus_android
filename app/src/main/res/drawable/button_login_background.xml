<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="8dp" android:right="8dp" android:top="8dp" android:left="8dp">
        <selector >
            <item android:state_pressed="false">
                <shape android:shape="oval">
<!--                    <corners android:radius="100dp"/>-->
                    <gradient
                            android:startColor="@color/mindPink"
                            android:endColor="@color/littlePurple"
                            android:angle="135"/>
                    <size android:width="80dp" android:height="80dp"/>
                </shape>

            </item>

            <item android:state_pressed="true" android:useLevel="false">
                <shape android:shape="oval">
<!--                    <corners android:radius="100dp"/>-->
                    <gradient
                            android:startColor="@color/littlePurple"
                            android:endColor="@color/mindPink"
                            android:angle="135"/>
                    <size android:width="80dp" android:height="80dp"/>
                </shape>
            </item>
        </selector>
    </item>
</layer-list>
